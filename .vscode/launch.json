{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "protocol": "legacy",
            "request": "launch",
            "name": "Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest",
            "args": [
                "--runInBand",
                "--config",
                "${workspaceRoot}\\jest.debug.json"
            ],
            "console": "internalConsole",
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            // "showAsyncStacks": true,
            "preLaunchTask": "build"
        }
    ]
}