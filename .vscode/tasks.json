{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "tsc",
    "isShellCommand": true,
    "args": ["-p", "${workspaceRoot}"],
    "showOutput": "silent",
    "problemMatcher": "$tsc",
    "echoCommand": true,
    "tasks": [
        {
            "suppressTaskName": true,
            "taskName": "build",
            "showOutput": "silent",
            "isBuildCommand": true
        }
    ]
}